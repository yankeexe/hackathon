
<% @health.each do |health| %>

	<div class="panel panel-default">
	    <div class="panel-body">
	       
	       <blockquote> 
	        <p><%= health.title %></p>
	        <small> <%= health.description %></small>

	        </blockquote> 
	        	<p>Required Amount: <%= health.required_amount %></p>
	         <p>Donated Amount: <%= health.donated_amount %></p>
	        
	        <div class="progress">
  				<div class="progress-bar" role="progressbar" aria-valuenow="50"
  					aria-valuemin="0" aria-valuemax="100" style="width:50%">
    				50%
  				</div>
	       
			</div>
	        
	        <div role="group">
				<button type="button" class="btn btn-primary link-donate"> <%= link_to 'Donate', donates_path %></button>
				<button type="button" class="btn btn-primary link-donate" style="float: right;"> <%= link_to 'Report', donates_path %></button>
	        </div>
		</div>
	</div>

<% end %>