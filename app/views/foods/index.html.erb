
<% @food.each do |food| %>

	<div class="panel panel-default">
	    <div class="panel-body">
	       
	       <blockquote> 
	        <p><%= food.title %></p>
	        <small> <%= food.description %></small>

	        </blockquote> 
	        	<p>Required Amount: <%= food.required_amount %></p>
	         <p>Donated Amount: <%= food.donated_amount %></p>
	        
	        <div class="progress">
  				<div class="progress-bar" role="progressbar" aria-valuenow="50"
  					aria-valuemin="0" aria-valuemax="100" style="width:50%">
    				50%
  				</div>
	       
			</div>
	        
	        <div class="btn-group" role="group">
				<button type="button" class="btn btn-primary link-donate"> <%= link_to 'Donate', donates_path %></button>
	        </div>
		</div>
	</div>

<% end %>